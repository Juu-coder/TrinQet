<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".RegistrationActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvcreateacct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create your account"
                android:textSize="22sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvfirst_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First Name"
                android:layout_marginTop="25dp"
                android:textSize="19sp"/>
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etfirstname"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:hint="John"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:background="@drawable/edittextbgd"/>

            <TextView
                android:id="@+id/tvlastname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Name"
                android:layout_marginTop="20dp"
                android:textSize="19sp"/>
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etlastname"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:hint="Doe"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:background="@drawable/edittextbgd"/>

            <TextView
                android:id="@+id/tvphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:layout_marginTop="20dp"
                android:textSize="19sp"/>
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etphone"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:hint="+2347098621399"
                android:inputType="phone"
                android:padding="10dp"
                android:background="@drawable/edittextbgd"/>

            <TextView
                android:id="@+id/tvusername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:layout_marginTop="20dp"
                android:textSize="19sp"/>
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etusername"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:hint="John_Doe"
                android:padding="10dp"
                android:background="@drawable/edittextbgd"/>

            <TextView
                android:id="@+id/tvemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E-mail"
                android:layout_marginTop="20dp"
                android:textSize="19sp"/>
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etemail"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:hint="JohnDoe@gmail.com"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:background="@drawable/edittextbgd"/>

            <TextView
                android:id="@+id/tvpassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:layout_marginTop="20dp"
                android:textSize="19sp"/>
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etpassword"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:hint="****************"
                android:padding="10dp"
                android:background="@drawable/edittextbgd"/>

            <Button
                android:id="@+id/btsignup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btnbgn"
                android:layout_marginTop="30dp"
                android:text="Create account"
                android:textAllCaps="false"
                android:textSize="19sp"
                android:layout_gravity="center_horizontal"
                android:textColor="@android:color/white"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:id="@+id/tvDoYou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Do you already have account?"
                    android:textSize="19sp"/>

                <TextView
                    android:id="@+id/tvSignin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign In"
                    android:layout_marginStart="10dp"
                    android:textSize="19sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_toEndOf="@id/tvDoYou"
                    android:textStyle="bold"/>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>