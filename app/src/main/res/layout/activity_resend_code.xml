<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ResendCode">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Enter the code"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Enter the code, we send to your phone please check and fill it."
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <EditText
                android:id="@+id/button6"
                android:gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/otp_background"
                android:padding="15dp"
                android:hint="5" />

            <EditText
                android:id="@+id/button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/otp_background"
                android:padding="15dp"
                android:hint="3" />

            <EditText
                android:id="@+id/button7"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/otp_background"
                android:padding="15dp"
                android:hint="1" />

            <EditText
                android:id="@+id/button8"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/otp_background"
                android:padding="15dp"
                android:hint="5" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="364dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:text="I didnt receive the code"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="360dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:text="RESEND CODE"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_confirm_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btnbgn"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="20dp"
            android:text="Keep going"
            android:textAllCaps="false"
            android:textSize="19sp"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white"/>


    </LinearLayout>

</ScrollView>


